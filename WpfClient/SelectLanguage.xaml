<Window x:Class="WpfClient.SelectLanguage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WpfClient"
        Title="Select Language" Height="112.8" Width="152" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Background="#FF709AA0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="ChechBoxLanguagess" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF0F0F0" Offset="0"/>
                    <GradientStop Color="#FFD3DEE1" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
            <TextBlock Text="Русский"/>
            <TextBlock Text="English"/>
        </ComboBox>
        <Button x:Name="Ok" Content="OK" HorizontalAlignment="Left" Margin="31,46,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" IsDefault="True" Background="#FFD3DEE1"/>

    </Grid>
</Window>
